<odoo>
  <data>
    <record model="ir.ui.view" id="report_nota_devolucao">
      <field name="name">crm_infcam.report_nota_devolucao</field>
      <field name="model">report_nota_devolucao</field>
      <field name="view_type">qweb</field>
      <field name="arch" type="xml">
        <t t-name="report_nota_devolucao">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-5 col-xs-offset-1">
                            <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                            <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p>
                        </div>
                    </div>

                    <h2>
                        <span>Nota de Devolução # </span>
                        <span t-field="doc.name"/>
                    </h2>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <th class="text-right">Taxes</th>
                            </tr>
                       </thead>
                       <tbody class="sale_tbody">
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <br/>
                    <p>
                        Declaro estar recebendo o(s) equipamento(s) constante(s) nesta Ordem de Serviço
                        exatamente como entreguei para orçamento.
                    </p>
                    <br/>
                    <br/>
                    <table class="table table-condensed" style="width: 100%; margin: 0 auto;">
                        <tr>
                            <td style="border-top: 1px solid; text-align:center; margin: 10px; width: 30%"><strong>Cliente</strong></td>
                            <td style="border-top:none;"></td>
                            <td style="border-top:none;  width: 30%;"></td>
                            <td style="border-top:none;"></td>
                            <td style="border-top: 1px solid; text-align:center; margin: 10px; width: 30%"><strong>Responsável InfCam</strong></td>
                        </tr>
                        <tr>
                            <td style="border-top:none;"></td>
                        </tr>
                        <tr>
                            <td style="border-top:none;"></td>
                        </tr>
                        <tr>
                            <td style="border-top:none;"></td>
                        </tr>
                        <tr>
                            <td  style="border-top:none;"></td>
                            <td style="border-top:none;"></td>
                            <td style="border-top: 1px solid; text-align:center; margin: 10px; width: 30%"><strong>Data</strong></td>
                            <td style="border-top:none;"></td>
                            <td style="border-top: 1px solid; text-align:center; margin: 10px; width: 30%"><strong>Data</strong></td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
      </field>
    </record>
  </data>
</odoo>